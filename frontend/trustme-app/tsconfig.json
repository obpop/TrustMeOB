{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext" // Include additional libraries for DOM and ES features
    ],
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "esModuleInterop": true, // Simplify interoperability between CommonJS and ES Module systems
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough cases in switch statements
    "module": "esnext", // Specify module code generation (updated to "esnext" for modern module syntax)
    "moduleResolution": "node", // Specify module resolution strategy
    "resolveJsonModule": true, // Enable importing JSON modules
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "jsx": "react-jsx", // Specify JSX mode for React (changed to "react-jsx" for React JSX)
    "strictNullChecks": true, // Enable strict null checking
    "declaration": true, // Generate corresponding .d.ts files
    "noImplicitAny": true, // Disallow implicit 'any' types
    "typeRoots": ["node_modules/@types"],
    "types": ["google.maps"]

  },
  "include": [
    "src/**/*" // Specify files to include in compilation (updated to include all files under "src" recursively)
  ],
  "exclude": [
    "node_modules" // Specify files to exclude from compilation (typically "node_modules" directory)
  ]
}
